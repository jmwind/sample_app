<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, user %>
      <section class="stats">
        <%= render 'shared/stats', user: user %>
      </section>
      <p>
        <%= pluralize(user.microposts.count, "post") %>
      </p>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
